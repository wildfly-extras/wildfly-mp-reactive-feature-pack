<!--
    USAGE:
        /path/to/galleon/bin/galleon.sh provision /path/to/this/provision.xml -dir=/path/to/created/wildfly/install/dir
    (note that `-dir` should have double hyphens, which don't work in XML comments!)
-->
<installation xmlns="urn:jboss:galleon:provisioning:3.0">
    <feature-pack location="wildfly@maven(org.jboss.universe:community-universe):current#19.0.0.Beta1-SNAPSHOT">
        <default-configs inherit="false"/>
        <packages inherit="false">
            <!-- If docs/licenses is desired, uncomment this line -->
            <!-- include name="docs.licenses"/ -->
        </packages>
    </feature-pack>
    <feature-pack location="org.wildfly.extras.reactive:wildfly-microprofile-galleon-pack:1.0.0.Alpha-SNAPSHOT">
        <default-configs inherit="false"/>
        <packages inherit="false">
            <!-- If docs/licenses is desired, uncomment this line -->
            <!-- include name="docs.licenses.merge"/ -->
        </packages>
    </feature-pack>
    <config model="standalone" name="standalone.xml">
        <layers>
            <!-- The base server -->
            <include name="cloud-profile"/>

            <!-- Context propagation -->
            <include name="context-propagation"/>

            <!-- Reactive messaging -->
            <include name="reactive-messaging"/>
            <!--
                reactive-messaging-connectors depends on the amqp, kafka and mqtt ones, so they
                are not needed unless we want something more fine grained
            -->
            <include name="reactive-messaging-connectors"/>
            <!--
                <include name="reactive-messaging-amqp"/>
                <include name="reactive-messaging-kafka"/>
                <include name="reactive-messaging-mqtt"/>
            -->

            <!-- Reactive streams operators -->
            <include name="reactive-streams-operators"/>
        </layers>
    </config>
    <options>

    </options>
</installation>
